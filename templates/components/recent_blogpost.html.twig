

<h3 class="sidebar-title">Recent Posts</h3>
<div class="sidebar-item recent-posts">
    {% for derniersArticle in this.recentArticle %}
        <div class="post-item clearfix">
            <img src="{{ derniersArticle.img }}" alt="">
            <h4><a href="{{ path('app_blog_show', {'slug': derniersArticle.slug}) }}">{{ derniersArticle.title }}</a></h4>
            <time datetime="{{ derniersArticle.date|date("Y-m-d") }}">{{ derniersArticle.date|date("j F Y") }}</time>
        </div>
    {% endfor %}
</div>