<div {{ attributes }}>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-6 mb-3">
            {{ form_row(form.nom) }}
        </div>
        <div class="col-6 mb-3">
            {{ form_row(form.prenom) }}
        </div>
        <div class="col-12 mb-3">
            {{ form_row(form.adresse) }}
        </div>
        <div class="col-12 mb-3">
            {{ form_row(form.societe) }}
        </div>
        <div class="col-6 mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="col-6 mb-3">
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-12 mb-3">
            {{ form_widget(form.avatar) }}
       </div>
        <div class="col-12 mb-3">
            {{ form_row(form.isVerified) }}
        </div>
    </div>
    
    <button class="btn col-12">Enregistrer la fiche</button>
{{ form_end(form) }}
</div>