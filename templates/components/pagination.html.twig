{% if pages > 1 %}
    <div class="paginate mb-5">
        <ul class="{{position}}">
            {% if currentPage > 1 %}
                <li class="page-item"><a class="page-link" href="{{ path(path, {page: currentPage - 1}) }}">&laquo;</a></li>
            {% else %}
                <li class="page-item disabled"><a class="page-link">&laquo;</a></li>
            {% endif %}
            {% set pageSupp = currentPage +4 %}
            {% if pages > 5 and currentPage < pages %}
                {% for page in currentPage..pageSupp %}
                    {% if page <= pages %}
                        <li class="{{ (page == currentPage) ? 'active' : '' }} page-item">
                            <a class="page-link" href="{{ path(path, {page: page }) }}">{{ page }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            {% else %}
                {% for page in 1..pages %}
                    <li class="{{ (page == currentPage) ? 'active' : '' }} page-item">
                        <a class="page-link" href="{{ path(path, {page: page }) }}">{{ page }}</a>
                    </li>
                {% endfor %}
            {% endif %}
            {% if currentPage < pages %}
                <li class="page-item"><a class="page-link" href="{{ path(path, {page: currentPage + 1}) }}">&raquo;</a></li>
            {% else %}
                <li class="page-item disabled"><a class="page-link">&raquo;</a></li>
            {% endif %}
        </ul>
    </div>
{% endif %}
