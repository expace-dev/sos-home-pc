    <div class="col-lg text-end">
        <a href="{{ path('app_admin_categories_blog_new') }}" class="btn btn-success">Ajouter une nouvelle catégorie</a>
    </div>
</div>
<div class="table-responsive mt-2">
    <table class="table card-table table-vcenter table-hover">
        <thead class="thead-dark form-group-sm">
            <tr>
                <th>Nom</th>
                <th>Slug</th>
                <th class="text-end">
                    <!--
                    <select name="search_limit" class="search_limit" style="width: 60px;"><option value="5">5</option><option value="15" selected="selected">15</option><option value="25">25</option><option value="50">50</option><option value="100">100</option><option value="999999999">all</option></select>
                    -->
                </th>
            </tr>
        </thead>
        <tbody>
            {% if this.allCategories %}
                {% for category in this.allCategories.data %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.slug }}</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a href="{{ path('app_admin_categories_blog_edit', {'id': category.id}) }}" class="btn btn-secondary"><i class="fas fa-pen"></i></a>
                                <a class="btn btn-danger" href="{{ path('app_admin_categories_blog_delete', {'id': category.id}) }}"><i class="fa-solid fa-trash-can"></i></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <td colspan="3" class="text-center">Aucune donnée dans le tableau</td>
            {% endif %}
        </tbody>
    </table>
    {% if this.allCategories %}
        <div style="padding-right: 10px;">
            {{ component('pagination', {
                'pages': this.allCategories.pages,
                'currentPage': this.allCategories.page,
                'limit': this.allCategories.limit,
                'path': 'app_admin_categories_blog_index',
                'position': 'justify-content-end'
            }) }}
        </div>
    {% endif %}
</div>

<script>
    $(document).ready( function () {

        $(".btn-danger").click(function (event) {
            event.preventDefault();

            url = $(this).attr('href');

            console.log(url);

            Swal.fire({
                text: "Voulez vous vraiment supprimer cette catégorie ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'supprimer'
            }).then((result) => {
                if(result.isConfirmed) {
                    document.location.href = url;
                }
            })
        });

    });
</script>
