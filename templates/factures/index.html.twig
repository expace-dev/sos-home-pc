{% extends 'base.html.twig' %}

{% block title %}Factures index{% endblock %}

{% block body %}

<section class="breadcrumbs-custom">
        <div class="breadcrumbs-custom__aside bg-image context-dark" style="background-image: url(/images/bg-image-1-1920x238.jpg);">
            <div class="container">
                <h2 class="breadcrumbs-custom__title">{{ block('title') }}</h2>
            </div>
        </div>
    </section>

    <section class="auth">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="info-box mb-4">
                        <div class="container mt-3">
                            {% for label, messages in app.flashes %}
                                <div class="alert alert-{{ label }}">
                                    {% for message in messages %}
                                        <i class="fa-solid fa-circle-info"></i> {{ message | raw }}    
                                    {% endfor %}
                                </div>
                            {% endfor %}
                            <a href="{{ path('app_factures_new') }}" class="btn mb-3">Cr√©er une nouvelle facture</a>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Statut</th>
                                        <th>Client</th>
                                        <th>Date</th>
                                        <th>Montant</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for facture in factures %}
                                    <tr>
                                        <td>{{ facture.statut }}</td>
                                        <td>{{ facture.client.email }}</td>
                                        <td>{{ facture.date ? facture.date|date('j F Y') : '' }}</td>
                                        <td>{{ facture.amount }}</td>
                                        <td>
                                            <a class="btn" target="_blank" href="{{ path('app_factures_show', {'id': facture.id}) }}"><i class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        $(document).ready( function () {

            $('.table').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.1/i18n/fr-FR.json"
                }
            });

            $(".btn-remove").click(function (event) {
                event.preventDefault();

                url = $(this).attr('href');

                console.log(url);

                Swal.fire({
                    text: "Voulez vous vraiment supprimer ce commentaire ?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'supprimer'
                }).then((result) => {
                    if(result.isConfirmed) {
                        document.location.href = url;
                    }
                })
            });

        });
    </script>
    

{% endblock %}
